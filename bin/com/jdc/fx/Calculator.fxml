<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="400.0" prefWidth="500.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="com.jdc.fx.Calculator">
   <children>
      <Label layoutX="109.0" layoutY="52.0" text="Simple Calculator">
         <font>
            <Font name="Arial" size="36.0" />
         </font>
      </Label>
      <TextField fx:id="digit1" layoutX="45.0" layoutY="149.0" prefHeight="26.0" prefWidth="197.0" promptText="Enter First Number" />
      <TextField fx:id="digit2" layoutX="251.0" layoutY="149.0" prefHeight="26.0" prefWidth="197.0" promptText="Enter Second Number" />
      <Button layoutX="45.0" layoutY="232.0" mnemonicParsing="false" onAction="#plus" prefHeight="30.0" prefWidth="60.0" text="+">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button layoutX="164.0" layoutY="232.0" mnemonicParsing="false" onAction="#minus" prefHeight="30.0" prefWidth="60.0" text="-">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button layoutX="273.0" layoutY="232.0" mnemonicParsing="false" onAction="#multiply" prefHeight="30.0" prefWidth="60.0" text="*">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button layoutX="388.0" layoutY="232.0" mnemonicParsing="false" onAction="#divide" prefHeight="30.0" prefWidth="60.0" text="/">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Label fx:id="result" layoutX="45.0" layoutY="325.0">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
